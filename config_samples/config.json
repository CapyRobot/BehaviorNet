{
    "config_metadata": {
        "version": "0.1",
        "id": "sample_config",
        "authors": [
            "capybot<e@capybot.com>"
        ]
    },
    "petri_net": {
        "places": [
            {
                "place_id": "A"
            },
            {
                "place_id": "B"
            },
            {
                "place_id": "C"
            },
            {
                "place_id": "D"
            }
        ],
        "transitions": [
            {
                "transition_id": "T1",
                "transition_type": "manual",
                "transition_arcs": [
                    {
                        "place_id": "A",
                        "type": "input"
                    },
                    {
                        "place_id": "B",
                        "type": "output"
                    },
                    {
                        "place_id": "C",
                        "type": "output"
                    }
                ]
            },
            {
                "transition_id": "T2",
                "transition_type": "manual",
                "transition_arcs": [
                    {
                        "place_id": "D",
                        "type": "output",
                        "token_content_filter": "robot"
                    },
                    {
                        "place_id": "B",
                        "type": "input",
                        "action_result_filter": ["SUCCESS"]
                    },
                    {
                        "place_id": "C",
                        "type": "input"
                    }
                ]
            }
        ]
    },
    "controller": {
        "thread_poll_workers": 4,
        "epoch_period_ms": 1000,
        "http_server": {
            "address": "localhost",
            "port": 8080
        },
        "actions": [
            {
                "place": "B",
                "type": "ACTION_TYPE_SLEEP",
                "params": {
                    "duration_ms": 3000
                }
            },
            {
                "place": "C",
                "type": "ACTION_TYPE_HTTP_GET",
                "params": {
                    "host": "@token{robot.host}",
                    "port": "@token{robot.port}",
                    "execute_path": "/execute/goto_fast",
                    "get_status_path": "/get_status/goto_fast"
                }
            }
        ]
    },
    "initial_marking": [
        {
            "place_id": "A",
            "number_tokens": 3
        }
    ],
    "execution_parameters": {},
    "__gui_metadata": {
        "places":{
            "A": {
                "position": [50, 0]
            },
            "B": {
                "position": [0, 100]
            },
            "C": {
                "position": [100, 100]
            },
            "D": {
                "position": [50, 200]
            }
        },
        "transitions":{
            "T1":{
                "position": [50, 50],
                "arc_A_input":{
                    "line_type": "diagonal_direct"
                },
                "arc_B_output":{
                    "line_type": "elbowed",
                    "axis_on_transition":"horizontal"
                },
                "arc_C_output":{
                    "line_type": "elbowed",
                    "axis_on_transition":"horizontal"
                }
            },
            "T2":{
                "position": [50, 150],
                "arc_B_input":{
                    "line_type": "elbowed",
                    "axis_on_transition":"horizontal"
                },
                "arc_C_input":{
                    "line_type": "elbowed",
                    "axis_on_transition":"horizontal"
                },
                "arc_D_output":{
                    "line_type": "diagonal_direct"
                }
            }
        }
    }
}